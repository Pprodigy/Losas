<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FDF9"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/tvNombreLosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Losa"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#1ABC9C"
            android:layout_marginBottom="20dp" />

        <!-- Fecha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Selecciona la fecha:"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Hora inicio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰ Hora de inicio:"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="20dp" />

        <!-- Hora fin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳ Hora de fin:"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="20dp" />

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💵 Total a pagar: S/ 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btnConfirmarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Reserva"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1ABC9C"
            android:drawableStart="@android:drawable/ic_menu_save"
            android:paddingVertical="12dp" />
    </LinearLayout>
</ScrollView>

