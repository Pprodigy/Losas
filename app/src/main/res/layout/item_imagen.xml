<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="12dp"
    android:backgroundTint="#F9F9F9"
    android:gravity="center_vertical">

    <!-- Texto: Nombre y Ruta -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNombreImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de imagen"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1ABC9C" />

        <TextView
            android:id="@+id/tvRutaImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta de imagen"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- BotÃ³n Eliminar -->
    <ImageButton
        android:id="@+id/btnEliminarImagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Eliminar imagen"
        android:src="@android:drawable/ic_delete"
        android:scaleType="centerInside"
        android:tint="@android:color/holo_red_dark" />
</LinearLayout>
