<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="6dp"
    android:padding="16dp"
    android:radius="16dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1ABC9C"
            android:layout_marginBottom="4dp" />

        <!-- Correo -->
        <TextView
            android:id="@+id/tvCorreoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textColor="#555555"
            android:textSize="14sp" />

        <!-- Celular -->
        <TextView
            android:id="@+id/tvCelularUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="987654321"
            android:textColor="#555555"
            android:textSize="14sp" />

        <!-- Tipo -->
        <TextView
            android:id="@+id/tvTipoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Cliente/Admin"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEditarUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✏️ Editar"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnEliminarUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🗑️ Eliminar"
                android:layout_marginStart="8dp"
                android:backgroundTint="#E53935"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


