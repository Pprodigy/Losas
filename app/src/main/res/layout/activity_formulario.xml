<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FDF9"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la losa"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Descripción -->
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Horario -->
        <EditText
            android:id="@+id/etHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horario"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Dirección -->
        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Precio -->
        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio por hora (S/.)"
            android:inputType="numberDecimal"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Nombre imagen -->
        <EditText
            android:id="@+id/etImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la imagen (ej: losa1)"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Mantenimiento -->
        <CheckBox
            android:id="@+id/cbMantenimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Está en mantenimiento?"
            android:textColor="#333"
            android:layout_marginBottom="16dp" />

        <!-- Spinner de imágenes -->
        <Spinner
            android:id="@+id/spinnerImagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="20dp" />

        <!-- Botón registrar -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Losa"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1ABC9C"
            android:drawableStart="@android:drawable/ic_input_add"
            android:paddingVertical="12dp" />
    </LinearLayout>
</ScrollView>
