<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_app"
        android:layout_marginBottom="16dp" />


    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeportTOP"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#1ABC9C"
        android:layout_marginBottom="32dp" />

    <!-- Campo Correo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icono_correo" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Campo Contraseña -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icono_contra" />

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/tvMostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar"
            android:textSize="12sp"
            android:textColor="#A0A0A0" />
    </LinearLayout>
    <!-- Botón Iniciar Sesión -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1ABC9C"
        android:layout_marginBottom="20dp" />

    <!-- ¿No tienes cuenta? -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta?"
        android:textColor="#1ABC9C"
        android:textSize="14sp" />

    <!-- Botón Registrarse (nuevo) -->
    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1ABC9C"
        android:layout_marginBottom="20dp" />

    <!-- Google Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google"
        android:drawableStart="@drawable/icono_google"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- Apple Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar con Apple"
        android:drawableStart="@drawable/icono_ios"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000" />


</LinearLayout>


