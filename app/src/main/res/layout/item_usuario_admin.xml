<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="10dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1ABC9C" />

        <!-- Correo -->
        <TextView
            android:id="@+id/tvCorreoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />

        <!-- DNI -->
        <TextView
            android:id="@+id/tvDniUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DNI: 12345678"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />

        <!-- Celular -->
        <TextView
            android:id="@+id/tvCelularUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular: 987654321"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />

        <!-- Tipo -->
        <TextView
            android:id="@+id/tvTipoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: Admin"
            android:textColor="#00796B"
            android:layout_marginTop="2dp" />

        <!-- Botones -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnEditarUsuario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:tooltipText="Editar"
                android:tint="@android:color/holo_blue_dark"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btnEliminarUsuario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                android:tooltipText="Eliminar"
                android:tint="@android:color/holo_red_dark"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
